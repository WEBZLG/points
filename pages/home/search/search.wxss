/* pages/home/search/search.wxss */
.goods-box {
  background: #fff;
  border-radius: 15rpx;
  margin: 30rpx auto;
}
.goods-item{
    display: flex;
    padding: 30rpx;
    align-items:center;
    border-bottom: 1px solid #e1e1e1
}

.goods-item:last-child{
    border-bottom: none;
}
.goods-img{
    height: 180rpx;
    width: 180rpx;
    margin-right: 30rpx;
}
.goods-desc{
    flex: 1;
}
.goods-title{
    width:100%;
    font-weight: bold;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
.goods-addr{
    font-size:24rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
}
.goods-point{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.add-car{
width:60rpx;
height:32rpx;
}
.points{
 font-size:36rpx;
color:#4680B4;   
}
.points-unit{
    font-size: 24rpx;
}