/* pages/home/home.wxss */
page,
.container,
.good-list{
    height: 100%
}
.head-top {
    display: flex;
    justify-content: space-between;
    line-height: 50rpx;
    padding-top:30rpx;
}
.wx-head{
    display: flex;
    align-items: center;
}
.head-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.attestation {
    color: #4680b4;
}

.banner {
    margin: 30rpx auto;
    border-radius:15rpx;
    overflow:hidden; 
}

swiper, swiper-item {
    border-radius: 15rpx;
    overflow: hidden;
}

.search {
    height: 60rpx;
    border: 1px solid #4680b4;
    border-radius: 15rpx;
}

.search {
    padding: 0 64rpx 0 24rpx;
    color: #4680b4;
    font-size: 28rpx;
}

.placeholder {
    color: #4680b4;
    font-size: 28rpx;
    text-align: center;
}

.search-box {
    position: relative;
}

.search-btn {
    height:28rpx;
    width:28rpx;
    position:absolute;
    right:0;
    top:0;
    z-index:9;
    padding:18rpx;
}

.discounts {
    height: 132rpx;
    width: 100%;
    border-radius: 15rpx;
    overflow: hidden;
    margin: 30rpx auto;
}

.goods-item {
    width:46%;
    margin-bottom:30rpx;
    display:inline-block;
    margin:2%;
}

.good-img {
    height: 330rpx;
}

.description {
    width: 100%;
    font-size: 32rpx;
    color: #444;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.go-buy {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.add-car {
    width: 60rpx;
    height: 32rpx;
}

.points {
    font-size: 36rpx;
    color: #4680b4;
}

.points-unit {
    font-size: 24rpx;
}

.nav-tab{
    width: 100%;
    overflow: hidden;
}
.nav-tab-fixed{
    position:fixed;
    top:0;
    left:30rpx;
    z-index:99;
    background:#fff;
    right:30rpx;
    padding:30rpx 0;
}
.tab-h {
    height: 66rpx;
    width: 100%;
    overflow: hidden;
    line-height: 60rpx;
    white-space: nowrap;
    z-index: 99;
}

.tab-item {
    margin: 0 20rpx;
    display: inline-block;
}

.tab-item.active {
    color: #06559B;
    position: relative;
    border-bottom:3px solid #06559B; 
}

