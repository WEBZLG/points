/* pages/discovery/discovery.wxss */
Page{
  background:rgba(242,243,247,1);
}
.shop-box{
  background: #fff;
  border-radius: 15rpx;
  margin: 30rpx auto;
}
.title{
height:99rpx;
line-height:99rpx;
border-bottom:1px solid #e1e1e1;
padding:0 30rpx;
font-weight:bold;
}
.shop-item{
  display: flex;
  padding: 30rpx;
  align-items:center;
  border-bottom:1px solid #e1e1e1;
  justify-content: space-between;
}
.shop-item:last-child{
  border-bottom: none;
}
.shop-img{
  height: 118rpx;
  width: 118rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.shop-content{
  flex: 1;
  margin-left: 30rpx;
}
.shop-title{
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.shop-adr{
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.shop-distance{
  display: flex;
  justify-content: space-between;
}
.distance-num{
  font-size: 24rpx;
  color: #06559b;
}
.next-icon{
  height: 26rpx;
  width: 15rpx;
}