/* pages/myself/myself.wxss */

Page {
    background: rgba(242, 243, 247, 1);
}

.my-box {
    margin: 30rpx auto;
}

.person-message {
    padding: 30rpx;
    display: flex;
    border-radius: 15rpx;
    background: #fff;
    justify-content: space-between;
}

.head-img {
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 20rpx;
}

.message {
    display: flex;
    line-height: 50rpx;
}

.identification-t {
    border: 1px solid #139805;
    height: 40rpx;
    width: 98rpx;
    border-radius: 15rpx;
    font-size: 24rpx;
    color: #139805;
    line-height: 40rpx;
    text-align: center;
}

.identification-f {
    border: 1px solid #139805;
    height: 40rpx;
    width: 98rpx;
    border-radius: 15rpx;
    font-size: 24rpx;
    color: #139805;
    line-height: 40rpx;
    text-align: center;
}

.user-name {
    font-weight: bold;
    color: #06559b;
}

.user-id, .user-type {
    font-size: 24rpx;
}

.nav-list {
    margin-top: 30rpx;
    background-color: #fff;
    border-radius: 15rpx;
}

.icon-item {
    height: 40rpx;
    width: 40rpx;
    margin-right: 10rpx;
}

.my-list {
    display: flex;
    justify-content: space-between;
    padding: 46rpx;
    border-bottom: 1px solid #e1e1e1;
}

.my-title {
    display: flex;
    align-items: center;
}

.point {
    color: #06559b;
}

.next-icon {
    width: 15rpx;
    height: 26rpx;
}

.sign-in {
    padding: 24rpx 0;
    background: rgba(249, 190, 0, 1);
    border-radius: 15px;
    color: #fff;
    font-weight: bold;
    text-align: center;
    margin-top: 30rpx;
}

.signed {
    padding: 24rpx 0;
    border-radius: 15px;
    color: #fff;
    font-weight: bold;
    text-align: center;
    margin-top: 30rpx;
    background-color: #dcdcdc;
    pointer-events: none;
}
