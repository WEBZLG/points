/* pages/myself/myorder/orderDetials/orderDetails.wxss */
.order-message,
.goods-messge{
    background-color:#fff;
    margin:15px 0;
    border-radius:10rpx;
    font-size:24rpx;
}
.title{
    font-size: 32rpx;
    padding:30rpx;
}
.message{
    padding:30rpx;
    line-height:50rpx;
}
.goods-item{
    display: flex;
    padding: 30rpx;
    align-items: center;
    border-top:1px solid #e1e1e1;
    border-bottom:1px solid #e1e1e1;
}
.goods-img{
    height: 180rpx;
    width: 180rpx;
    border-radius: 15rpx;
    overflow: hidden;
    padding-right: 30rpx;
}
.goods-desc{
    flex: 1;
    font-size: 24rpx;
    line-height:42rpx;

}
.goods-title{
    font-size: 32rpx;
    font-weight: bold;
    overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   webkit-box-orient: vertical; 
}

.num-status{
    display:flex;
    align-items:center;
    justify-content:space-between;
}
.viewGoods{
    color: #06559B;
}
.merchant{
    line-height:42rpx;
    padding:30rpx;
    border-bottom:1px solid #e1e1e1;
}
.merchant:last-child{
    border-bottom: none;
}
.sureBtn{
    padding: 24rpx 0;
    font-weight: bold;
    color: #06559B;
    text-align: center;
    font-size:32rpx;
    border-radius: 15rpx;
    margin-top:30rpx;
    background-color: #F9BE00;
}
.sureBtned{
    padding: 24rpx 0;
    font-weight: bold;
    color: #fff;
    text-align: center;
    border-radius: 15rpx;
    font-size:32rpx;
    margin-top:30rpx;
    background-color: #DCDCDC;
}