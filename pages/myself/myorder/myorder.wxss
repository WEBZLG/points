/* pages/myself/myorder/myorder.wxss */

.myorder-box{
    padding: 30rpx 0;
}
.goods-img{
    height: 180rpx;
    width: 180rpx;
    border-radius: 15rpx;
    overflow: hidden;
    padding-right: 30rpx;
}
.goods-list{
    background-color: #fff;
    border-radius: 10rpx;
    margin-bottom:30rpx;
}
.order-time{
    padding: 30rpx;
    border-bottom: 1px solid #e1e1e1;
}
.goods-item{
    display: flex;
    padding: 30rpx;
    align-items: center;
    border-bottom:1px solid #e1e1e1;
}

.goods-desc{
    flex: 1;
    font-size: 24rpx;
    line-height:40rpx;

}
.title{
    font-size: 32rpx;
    font-weight: bold;
    overflow: hidden;
   text-overflow: ellipsis;
   display: -webkit-box;
   -webkit-line-clamp: 2;
   webkit-box-orient: vertical; 
}
.address{
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.num-status,
.all-num{
    display:flex;
    align-items:center;
    justify-content:space-between;
}
.all-num{
    padding: 30rpx;
}