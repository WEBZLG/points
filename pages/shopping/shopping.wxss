/* pages/shopping/shopping.wxss */

Page {
  background: rgba(242, 243, 247, 1);
}

.shopping-box {
  background: #fff;
  border-radius: 15rpx;
  margin: 30rpx auto;
}

.shopping-sys {
  display: flex;
  height: 99rpx;
  line-height: 99rpx;
  padding: 0 30rpx;
  font-weight: bold;
  align-items:center;
  justify-content: space-between;
  border-bottom: 1px solid #e1e1e1;
}

.check-icon{
  height: 36rpx;
  width: 36rpx;
  border-radius:50%; 
  display: inline-block;
  vertical-align: top;
  margin-right: 20rpx;
}
.goods-item{
    display: flex;
    padding: 30rpx;
    align-items:center;
    border-bottom:1px solid #e1e1e1;
    justify-content: space-around;
}
.goods-item:last-child{
    border-bottom:none; 
}
.goods-img{
    width:180rpx;
    height:180rpx;
    border-radius:15rpx;
    overflow: hidden;
}
.goods-content{
  flex: 1;
  margin-left: 30rpx;
}
.description{
    font-weight: bold;
    text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.goods-adr{
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.go-buy{
  display: flex;
  justify-content: space-between;
}
.add-car{
  width: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.points{
  font-size: 36rpx;
  color: #4680B4;
}
.points-unit{
  font-size: 24rpx;
}
.reduce{
    height: 6rpx;
    width: 24rpx;
    padding:9rpx 0;
}
.add{
    height: 24rpx;
    width: 24rpx;
}
.goods-num{
    width: 38rpx;
    text-align: center;
}
.goods-action{
    display:flex;
    justify-content:space-between;
    align-items:center;
    position:fixed;
    width:92%;
    bottom:30rpx;
    left:0;
    padding:30rpx;
    background:#fff;
}
.price-all{
    font-weight:bold;
}
.price-all text{
    color: #4680B4;
}
.goods-btn{
  background:#F9BE00;
    padding:24rpx 54rpx;
    color:#fff;
    font-weight:bold;
    border-radius:15rpx;
}