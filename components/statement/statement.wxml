<!--components/statement/statement.wxml-->
<view class="wx-popup" hidden="{{flag}}">
  <view class='popup-container'>
    <view class="wx-popup-title">{{title}}</view>
    <view class='wx-popup-box'>
        <view class="wx-popup-con">
            
        </view>
        <view class='wx-popup-read' bindtap='_read'>{{read}}</view>
    </view>
    <view class="wx-popup-btn">
      <view class="btn-no" bindtap='_error'>{{btn_no}}</view>
      <view class="btn-ok" bindtap='_success'>{{btn_ok}}</view>
    </view>
  </view>
</view>
